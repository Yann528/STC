{% extends 'base.html.twig' %}


{% block title %}Nos produits - STC{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <h3>Filtrer</h3>
            {{form(form)}}
        </div>
        <div class="col-md-9">
            <h3>Nos produits</h3>

            <div class="row product-container">
                {% for product in products %}
                    <div class="col-md-4">
                        <div class="product-item">
                            <a href="{{path('product', { 'slug' : product.slug })}}"><img src="/uploads/{{product.illustration}}" alt="{{product.name}}" class='img-fluid'></a>
                            <h6>{{product.name}}</h6>
                            <span class="product-prix">Prix : {{product.prix /100 }}€</span>
                            <span class="product-prix"> | loyer : {{product.loyer /100 }}€</span></br>
                            <span class="product-surface">Surface : {{product.surface}}m2</span></br>
                            <span class="product-dispoDate">Dispo : {{product.dispoDate }}</span></br>
                            {% if product.offrepro == true %}
                            <span> Offres Pro</span>
                            {% endif %}
                            <hr>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    

{% endblock %}
