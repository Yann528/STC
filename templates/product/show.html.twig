{% extends 'base.html.twig' %}


{% block title %}{{ product.name }}{% endblock %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h5>{{product.name}} | {{product.codePostal}} {{product.localisation}}</h5>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-7">
            <div id="carouselProduct" class="carousel slide" data-ride="carousel" data-interval="false">
                <ol class="carousel-indicators">
                    <li data-target="#carouselProduct" data-slide-to="0" class="active"></li>
                    {% for productimg in product.productimgs %}
                    <li data-target="#ccarouselProduct" data-slide-to="{{loop.index}}"></li>
                    {% endfor %}
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="/uploads/{{product.illustration}}" alt="{{product.name}}">
                    </div>
                    {% for productimg in product.productimgs %}
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/uploadsDiapos/{{productimg.photos}}" alt="{{productimg.alt}}">
                    </div>
                    {% endfor %}
                </div>
                  <!-- Controls -->
                <a class="carousel-control-prev" href="#carouselProduct" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselProduct" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-5 my-auto">
            
            <div class="product-page-item">
                {% if product.prix != 0 %} 
                <span class='product-page-price'>Prix : {{product.prix /100 }}€</span></br>
                {% endif %}
                {% if product.loyer != 0 %} 
                <span class="product-page-prix">loyer : {{product.loyer /100 }}€</span></br>
                {% endif %}

                <span class="product-page-surface">Surface : {{product.surface}}m2  | </span>
                <span class="product-page-dispoDate">Dispo : {{product.dispoDate }}</span>
                <p>{{product.subtitle}}</p>
                {% if product.plans != '' %} 
                <hr>  
                <a href="/uploadsPlans/{{product.plans}}" target="_blank" class='btn btn-secondary'>Plan</a>
                {% endif %}
                {% if product.dataroom != '' %} 
                <a href="/uploadsDataroom/{{product.dataroom}}" target="_blank" class='btn btn-secondary'>Data room</a>
                <hr>
                {% endif %}
                
                

            </div>
             <div class="product-nous-contacter">
                 <h3> Nous contacter </h3>
                 <p>Ce bien vous interesse ? </br> Nous vous recontactons dans les 24H.</p>
                 <a href="{{ path('contact') }}"class='btn btn-light'>Prendre un rendez-vous</a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="product-description">
                <p>
                <h5>Présentation du bien</h5>
                {{product.description}}
                </p>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12 product-information">
            <div class="row">
                <div class="col-md-4 text-center">
                    {% if product.prix != 0 %}
                    <span class='product-page-price'>- Prix: {{product.prix /100 }}€</span></br>
                    {% endif %}
                    {% if product.loyer != 0 %}
                    <span class="product-page-prix">- loyer: {{product.loyer /100 }}€</span></br>
                    {% endif %}
                    <span class="product-page-dispoDate">- Type d'offre: {{product.typeOffre }}</span></br>
                    <span class="product-page-surface">- Surface: {{product.surface}} m2</span></br>
                    
                </div>

                <div class="col-md-4 text-center">
                    <span class="product-page-dispoDate">- Etat general: {{product.etat }}</span></br>
                    <span class="product-page-dispoDate">- localisation: {{product.localisation }}</span></br>
                    <span class="product-page-surface">- Code Postal: {{product.codePostal}}</span></br>
                </div>

                <div class="col-md-4 text-center">
                    {% if product.montantTaxeFonciere != 0 %}
                    <span class="product-page-montantTaxeFonciere">- Taxe Fonciere: {{product.montantTaxeFonciere /100 }}€</span></br>
                    {% endif %}
                     {% if product.montantCharges != 0 %}   
                    <span class="product-page-prix">- Charges: {{product.montantCharges /100 }}€</span></br>
                    {% endif %}
                    {% if product.montantTaxeBureaux != 0 %}
                    <span class="product-page-surface">- Taxe Bureaux: {{product.montantTaxeBureaux /100 }}€</span></br>
                    {% endif %}
                    {% if product.prix != 0 %}
                    <span class="product-page-dispoDate">- Dispo : {{product.dispoDate }}</span></br>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<scrint>

</scrint>
{% endblock %}